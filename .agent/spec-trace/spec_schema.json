{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Specification Level Traceability Registry",
  "x-template": "spec_template.json",
  "description": "Registry for specification level traceability IDs",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Registry description",
      "default": "Specification level traceability IDs"
    },
    "spec": {
      "type": "array",
      "description": "Specification level traceability IDs",
      "x-frontmatter-part": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "object",
            "properties": {
              "full": { "type": "string" },
              "level": {
                "type": "string",
                "const": "spec"
              },
              "scope": { "type": "string" },
              "semantic": { "type": "string" },
              "hash": { "type": "string" },
              "version": { "type": "string" }
            },
            "required": ["full", "level", "scope", "semantic"]
          },
          "summary": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "derived_from": {
            "type": "array",
            "items": { "type": "string" }
          },
          "trace_to": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["id", "summary", "status"]
      }
    }
  },
  "required": ["version", "description", "spec"],
  "additionalProperties": false
}