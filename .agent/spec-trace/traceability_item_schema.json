{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Traceability Item Schema",
  "x-template": "traceability_item_template.json",
  "description": "Unified schema for all traceability items across all levels",
  "properties": {
    "id": {
      "type": "object",
      "properties": {
        "full": { "type": "string" },
        "level": {
          "type": "string",
          "enum": ["req", "spec", "design", "impl", "test"]
        },
        "scope": { "type": "string" },
        "semantic": { "type": "string" },
        "hash": { "type": "string" },
        "version": { "type": "string" }
      },
      "required": ["full", "level", "scope", "semantic"]
    },
    "summary": { "type": "string" },
    "description": { "type": "string" },
    "status": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "derived_from": {
      "type": "array",
      "items": { "type": "string" }
    },
    "trace_to": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id", "summary", "status"]
}
