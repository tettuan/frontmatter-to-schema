{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Specification Level Traceability Registry",
  "x-template": "spec_template.json",
  "description": "Registry for specification level traceability IDs",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Registry description",
      "default": "Specification level traceability IDs"
    },
    "spec": {
      "type": "array",
      "description": "Specification level traceability IDs",
      "x-frontmatter-part": true,
      "items": { "$ref": "traceability_item_schema.json" }
    }
  },
  "required": ["version", "description", "spec"],
  "additionalProperties": false
}
