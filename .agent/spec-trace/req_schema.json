{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Requirement Level Traceability Registry",
  "x-template": "req_template.json",
  "description": "Registry for requirement level traceability IDs",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string", 
      "description": "Registry description",
      "default": "Requirement level traceability IDs"
    },
    "req": {
      "type": "array",
      "description": "Requirement level traceability IDs",
      "x-frontmatter-part": true,
      "items": { "$ref": "traceability_req_schema.json" }
    }
  },
  "required": ["version", "description", "req"],
  "additionalProperties": false
}