{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Design Level Traceability Registry",
  "x-template": "design_template.json",
  "description": "Registry for design level traceability IDs",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Registry description",
      "default": "Design level traceability IDs"
    },
    "traceability": {
      "type": "array",
      "description": "Source traceability data for level filtering",
      "items": {
        "allOf": [
          { "$ref": "traceability_item_schema.json" },
          {
            "properties": {
              "id": {
                "properties": {
                  "level": {
                    "const": "design"
                  }
                }
              }
            }
          }
        ]
      }
    },
    "design": {
      "type": "array",
      "description": "Design level traceability IDs",
      "x-frontmatter-part": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "object",
            "properties": {
              "full": { "type": "string" },
              "level": { "type": "string" },
              "scope": { "type": "string" },
              "semantic": { "type": "string" },
              "hash": { "type": "string" },
              "version": { "type": "string" }
            }
          },
          "summary": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    }
  },
  "required": ["version", "description", "design"],
  "additionalProperties": false
}
