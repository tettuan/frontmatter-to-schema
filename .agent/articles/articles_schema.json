{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Articles Index Schema",
  "x-template": "articles_template.yml",
  "description": "Schema for article index with publication status",
  "properties": {
    "generated_at": {
      "type": "string",
      "description": "Timestamp when the index was generated",
      "format": "date-time"
    },
    "total_articles": {
      "type": "number",
      "description": "Total number of articles processed"
    },
    "published_count": {
      "type": "number",
      "description": "Number of published articles",
      "x-derived-from": "articles[?published==true]",
      "x-derived-count": true
    },
    "draft_count": {
      "type": "number",
      "description": "Number of draft articles",
      "x-derived-from": "articles[?published==false]",
      "x-derived-count": true
    },
    "articles": {
      "type": "array",
      "description": "List of all articles",
      "x-frontmatter-part": true,
      "items": {
        "$ref": "article_schema.json"
      }
    },
    "topics": {
      "type": "array",
      "description": "All unique topics across articles",
      "x-derived-from": "articles[].topics[]",
      "x-derived-unique": true,
      "items": {
        "type": "string"
      }
    },
    "types": {
      "type": "array",
      "description": "All unique article types",
      "x-derived-from": "articles[].type",
      "x-derived-unique": true,
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["generated_at", "total_articles", "articles"],
  "additionalProperties": false
}