{
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["climpt"],
  "permissions": {
    "allow": ["Climpt__*"]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/doc_session_start.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "scripts/hook_stops_docs.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "scripts/hook_stops_docs.sh"
          }
        ]
      }
    ]
  }
}
