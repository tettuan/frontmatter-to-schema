{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "x-template": "template.yml",
  "properties": {
    "books": {
      "type": "array",
      "x-frontmatter-part": true,
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "emoji": { "type": "string" },
          "type": { "type": "string" },
          "topics": {
            "type": "array",
            "items": { "type": "string" }
          },
          "published": { "type": "boolean" },
          "published_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["title", "type", "published"],
        "additionalProperties": true
      }
    }
  },
  "required": ["books"],
  "additionalProperties": false
}
