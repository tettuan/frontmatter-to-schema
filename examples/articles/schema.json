{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "articles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "category": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "summary": { "type": "string" }
        },
        "required": ["title", "author", "date"]
      },
      "x-frontmatter-part": true
    }
  }
}
