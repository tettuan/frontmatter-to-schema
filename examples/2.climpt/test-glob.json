{
  "version": "1.0.0",
  "description": "Command Registry",
  "tools": {
    "availableConfigs": [
      "git",
      "spec"
    ],
    "commands": [
      {
        "c1": "git",
        "c2": "commit",
        "c3": "refinement-issue",
        "title": "Git Commit Refinement",
        "description": "Refine git commit messages for issues",
        "usage": "climpt-git commit refinement-issue",
        "options": {
          "input": [
            "issue_content"
          ],
          "adaptation": [
            "default",
            "simplified"
          ],
          "input_file": true,
          "stdin": true,
          "destination": false
        }
      },
      {
        "c1": "spec",
        "c2": "analyze",
        "c3": "quality-metrics",
        "title": "Spec Quality Analysis",
        "description": "Analyze specification quality metrics",
        "usage": "climpt-spec analyze quality-metrics",
        "options": {
          "input": [
            "spec_file"
          ],
          "adaptation": [
            "comprehensive",
            "basic"
          ],
          "input_file": true,
          "stdin": false,
          "destination": true
        }
      }
    ]
  }
}