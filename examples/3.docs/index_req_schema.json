{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Requirement Level Index Schema",
  "x-template": "index_level_template.json",
  "x-template-items": "traceability_item_template.json",
  "description": "Schema for requirement level traceability index",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Index description",
      "default": "Requirement level traceability IDs"
    },
    "level": {
      "type": "string",
      "description": "Traceability level",
      "default": "req"
    },
    "req": {
      "type": "array",
      "description": "Requirement level traceability items",
      "x-frontmatter-part": true,
      "x-extract-from": "traceability[]",
      "x-jmespath-filter": "[?id.level == 'req']",
      "x-merge-arrays": true,
      "items": {
        "$ref": "traceability_item_schema.json"
      }
    }
  },
  "required": []
}
