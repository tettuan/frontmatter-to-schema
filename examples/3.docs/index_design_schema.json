{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Design Level Index Schema",
  "x-template": "index_level_template.json",
  "x-template-items": "traceability_item_template.json",
  "description": "Schema for design level traceability index",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Index description",
      "default": "Design level traceability IDs"
    },
    "level": {
      "type": "string",
      "description": "Level name for template",
      "default": "design"
    },
    "traceability": {
      "type": "array",
      "description": "Design level traceability items",
      "x-frontmatter-part": true,
      "x-jmespath-filter": "[?id.level == 'design']",
      "items": {
        "$ref": "traceability_item_schema.json"
      }
    }
  },
  "required": []
}
