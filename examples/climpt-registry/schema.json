{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "x-template": "./template.json",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Registry version (e.g., '1.0.0')",
      "x-base-property": true,
      "x-default-value": "1.0.0"
    },
    "description": {
      "type": "string",
      "description": "Overall registry description",
      "x-base-property": true,
      "x-default-value": "Climpt comprehensive configuration for MCP server and command registry"
    },
    "tools": {
      "type": "object",
      "properties": {
        "availableConfigs": {
          "type": "array",
          "x-derived-from": "tools.commands[].c1",
          "x-derived-unique": true,
          "items": { "type": "string" },
          "description": "Tool names array - each becomes available as climpt-{name}"
        },
        "allC1Categories": {
          "type": "array",
          "items": { "type": "string" },
          "x-derived-from": "tools.commands[].c1",
          "x-derived-unique": true,
          "description": "All unique C1 categories/domains extracted from commands"
        },
        "allC2Actions": {
          "type": "array",
          "items": { "type": "string" },
          "x-derived-from": "tools.commands[].c2",
          "x-derived-unique": true,
          "description": "All unique C2 actions/directives extracted from commands"
        },
        "allC3Targets": {
          "type": "array",
          "items": { "type": "string" },
          "x-derived-from": "tools.commands[].c3",
          "x-derived-unique": true,
          "description": "All unique C3 targets/layers extracted from commands"
        },
        "commands": {
          "type": "array",
          "x-frontmatter-part": true,
          "description": "Command registry - defines all available C3L commands",
          "items": {
            "$ref": "./command-schema.json"
          }
        }
      },
      "required": ["availableConfigs", "commands"]
    }
  },
  "required": ["version", "description", "tools"]
}
