{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "x-template": "article_template.json",
  "title": "Article Schema",
  "description": "Schema for a single article metadata",
  "properties": {
    "title": {
      "type": "string",
      "description": "Article title"
    },
    "emoji": {
      "type": "string",
      "description": "Emoji icon for the article"
    },
    "type": {
      "type": "string",
      "description": "Article type (tech/idea)"
    },
    "topics": {
      "type": "array",
      "description": "Article topics/tags",
      "items": {
        "type": "string"
      }
    },
    "published": {
      "type": "boolean",
      "description": "Publication status"
    }
  },
  "required": ["title", "type", "published"],
  "additionalProperties": false
}
