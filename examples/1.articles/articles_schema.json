{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Articles Index Schema",
  "x-template": "articles_template.json",
  "x-template-items": "article_template.json",
  "x-template-format": "yaml",
  "description": "Schema for article index with publication status",
  "properties": {
    "generated_at": {
      "type": "string",
      "description": "Timestamp when the index was generated",
      "format": "date-time"
    },
    "articles": {
      "type": "array",
      "description": "List of all articles",
      "items": {
        "$ref": "article_schema.json"
      }
    },
    "topics": {
      "type": "array",
      "description": "All unique topics across articles",
      "x-derived-from": "articles[].topics",
      "x-derived-unique": true,
      "items": {
        "type": "string"
      }
    },
    "types": {
      "type": "array",
      "description": "All unique article types",
      "x-derived-from": "articles[].type",
      "x-derived-unique": true,
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["generated_at", "articles"],
  "additionalProperties": false
}
