{
  "name": "@scope/frontmatter-to-schema",
  "version": "0.1.1",
  "description": "Convert frontmatter to JSON schema",
  "license": "MIT",
  "exports": "./mod.ts",
  "exclude": [
    "tests/e2e/test-output/"
  ],
  "publish": {
    "exclude": [
      "tests/**/*",
      "tmp/**/*",
      ".agent/**/*",
      "scripts/**/*",
      "examples/**/*"
    ]
  },
  "lint": {
    "exclude": [
      "tests/integration/process-documents.orchestrator.test.ts"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "exclude": [
      "examples/**/template.yml",
      "examples/**/item_template.yml",
      ".agent/**/*template*.yml"
    ]
  },
  "tasks": {
    "ci": "deno run --allow-read --allow-write --allow-run --allow-env jsr:@aidevtool/ci",
    "ci:dirty": "deno run --allow-read --allow-write --allow-run --allow-env jsr:@aidevtool/ci --allow-dirty",
    "test": "deno run --allow-all scripts/robust-test-runner.ts",
    "test:legacy": "deno test --allow-all --config=deno.test.json --jobs=4",
    "test:unit": "deno test --allow-all tests/unit/ --jobs=8",
    "test:integration": "deno test --allow-all tests/integration/ --jobs=4",
    "test:e2e": "deno test --allow-all tests/e2e/ --jobs=1",
    "test:performance": "deno test --allow-all tests/performance/ --jobs=1",
    "test:coverage": "deno test --allow-all --coverage=tmp/coverage --config=deno.test.json",
    "coverage:report": "deno coverage tmp/coverage --lcov --output=tmp/coverage.lcov"
  },
  "imports": {
    "@anthropic-ai/claude-code": "npm:@anthropic-ai/claude-code@^1.0.89",
    "@halvardm/jmespath": "jsr:@halvardm/jmespath@^0.17.0",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/testing/bdd": "jsr:@std/testing@^1.0.15/bdd",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^1.0.0",
    "jsr:@std/fs": "jsr:@std/fs@1.0.8",
    "jsr:@std/yaml": "jsr:@std/yaml@1.0.5",
    "jsr:@std/front-matter": "jsr:@std/front-matter@1.0.5",
    "jsr:@std/cli": "jsr:@std/cli@1.0.9",
    "jsr:@std/crypto": "jsr:@std/crypto@1.0.3",
    "jsr:@std/front-matter/yaml": "jsr:@std/front-matter@1.0.5/yaml"
  }
}
